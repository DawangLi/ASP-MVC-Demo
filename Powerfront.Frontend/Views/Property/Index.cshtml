@model IEnumerable<Powerfront.Backend.EntityFramework.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Property Maintenance</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PropertyId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PropertyId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PropertyId })
        </td>
    </tr>
}

</table>

<p>@Html.ActionLink("Create New", "Create", "Property", null, new { @class = "btn btn-primary btn-md", @id = "PropertyMaintenanceButton" })</p>
